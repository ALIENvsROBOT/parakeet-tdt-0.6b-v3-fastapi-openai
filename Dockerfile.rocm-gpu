# Parakeet TDT 0.6B ONNX - AMD ROCm GPU Dockerfile
# High-performance speech transcription with AMD GPUs

FROM rocm/pytorch:rocm6.2.4_ubuntu22.04_py3.10_pytorch_release_2.3.0

# Build arguments for metadata
ARG BUILD_DATE
ARG VCS_REF
ARG VERSION=dev

# Metadata labels
LABEL maintainer="Parakeet TDT"
LABEL description="ONNX-optimized speech transcription service (AMD ROCm GPU)"
LABEL org.opencontainers.image.created="${BUILD_DATE}"
LABEL org.opencontainers.image.source="https://github.com/ALIENvsROBOT/parakeet-tdt-0.6b-v3-fastapi-openai"
LABEL org.opencontainers.image.version="${VERSION}"
LABEL org.opencontainers.image.revision="${VCS_REF}"
LABEL org.opencontainers.image.vendor="Parakeet TDT"
LABEL org.opencontainers.image.title="Parakeet TDT AMD ROCm GPU"
LABEL org.opencontainers.image.description="High-performance ONNX-optimized speech transcription service (AMD ROCm GPU)"
LABEL variant="rocm-gpu"

# Prevent interactive prompts during build
ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Create non-root user for security
RUN useradd --create-home --shell /bin/bash parakeet
WORKDIR /app

# Copy requirements first for layer caching
COPY requirements.txt .

# Install Python dependencies with ROCm support
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir onnx-asr[hub]>=0.10.0 \
    waitress>=3.0.0 \
    flask>=3.0.0 \
    openai>=1.0.0 \
    typing_extensions>=4.0.0 \
    psutil>=5.0.0 \
    requests>=2.0.0 \
    onnxruntime-rocm>=1.18.1 \
    "numpy<2"

# Copy application code
COPY app.py .
COPY templates/ templates/
COPY parakeet.png .

# Create directories for runtime
RUN mkdir -p temp_uploads models && \
    chown -R parakeet:parakeet /app

# Switch to non-root user
USER parakeet

# Environment variables
ENV HF_HOME=/app/models
ENV HF_HUB_CACHE=/app/models
ENV HF_HUB_DISABLE_SYMLINKS_WARNING=true
ENV PYTHONUNBUFFERED=1
ENV HSA_OVERRIDE_GFX_VERSION=11.0.0

# Expose the API port
EXPOSE 5092

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=120s --retries=3 \
    CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:5092/health')" || exit 1

# Run the application
CMD ["python", "app.py"]
